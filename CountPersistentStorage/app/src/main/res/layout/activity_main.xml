<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:paddingTop="20dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >
        <TextView android:id="@+id/count_label"
            android:layout_height="wrap_content"
            android:text="@string/count_label"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="24sp"/>
        <TextView android:id="@+id/count_value"
            android:layout_height="wrap_content"
            android:text="@string/count_value"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="24sp"
            android:paddingLeft="20dp"/>
    </LinearLayout>
    <Button android:id="@+id/inc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increment_button_label">
    </Button>
    <Button android:id="@+id/dec_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decrement_button_label">
    </Button>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="10X Count"
        android:id="@+id/countByTen"
        android:layout_gravity="center_horizontal" />
</LinearLayout>